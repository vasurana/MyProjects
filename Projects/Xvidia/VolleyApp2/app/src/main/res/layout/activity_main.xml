<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="120dip"
        android:layout_height="50dip"
        android:text="Send Request"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/button_send"
        android:layout_alignRight="@+id/textView_send"
        android:layout_alignEnd="@+id/textView_send" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="80dip"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/textView_send"
        android:layout_above="@+id/button_get"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="42dp" />

    <Button
        android:layout_width="120dip"
        android:layout_height="50dip"
        android:text="Get Value"
        android:id="@+id/button_get"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView_get"
        android:layout_alignEnd="@+id/textView_get" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="80dip"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/textView_get"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/button_StartBackgroundService"
        android:layout_alignRight="@+id/textView_send"
        android:layout_alignEnd="@+id/textView_send" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Background Service"
        android:id="@+id/button_StartBackgroundService"
        android:layout_above="@+id/button_captureImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:text="Capture Image"
        android:id="@+id/button_captureImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button_get"
        android:layout_alignEnd="@+id/button_get"
        android:layout_alignParentBottom="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record"
        android:id="@+id/button_record"
        android:layout_alignTop="@+id/button_captureImage"
        android:layout_toRightOf="@+id/button_StartBackgroundService"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
