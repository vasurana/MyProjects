<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#9000"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/display"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:background="#9000"
        android:textColor="#FFF"
        android:textSize="50dp" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="25" >

        <Button
            android:id="@+id/seven"
            android:textSize="30dp"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="7" >
        </Button>

        <Button
            android:id="@+id/eight"
            android:textSize="30dp"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="8" >
        </Button>

        <Button
            android:id="@+id/nine"
            android:textSize="30dp"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="9" >
        </Button>

        <Button
            android:id="@+id/div"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:textSize="30dp"
            android:layout_weight="1"
            android:text="/" >
        </Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:layout_weight="25" >

        <Button
            android:id="@+id/four"
            android:textSize="30dp"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="4" >
        </Button>

        <Button
            android:id="@+id/five"
            android:textSize="30dp"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="5" >
        </Button>

        <Button
            android:id="@+id/six"
            android:textSize="30dp"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="6" >
        </Button>

        <Button
            android:id="@+id/mul"
            android:textSize="30dp"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="*" >
        </Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:layout_weight="25" >

        <Button
            android:id="@+id/one"
            android:textSize="30dp"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="1" >
        </Button>

        <Button
            android:id="@+id/two"
            android:textSize="30dp"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="2" >
        </Button>

        <Button
            android:id="@+id/three"
            android:textSize="30dp"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="3" >
        </Button>

        <Button
            android:id="@+id/sub"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:textSize="30dp"
            android:layout_weight="1"
            android:text="-" >
        </Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:layout_weight="25" >

        <Button
            android:id="@+id/cancel"
            android:textSize="30dp"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="C" >
        </Button>

        <Button
            android:id="@+id/zero"
            android:layout_width="fill_parent"
            android:textSize="30dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="0" />

        <Button
            android:id="@+id/equal"
            android:layout_width="fill_parent"
            android:textSize="30dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="=" >
        </Button>

        <Button
            android:id="@+id/add"
            android:layout_width="fill_parent"
            android:textSize="30dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="+" >
        </Button>
    </LinearLayout>
    

</LinearLayout>